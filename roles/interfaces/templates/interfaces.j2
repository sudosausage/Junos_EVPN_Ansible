{% set device = hostvars[inventory_hostname] %}
interfaces {
{% for interface in device.interfaces %}
    {{ interface.interface }} {
        unit 0 {
            description "{{ vxlan.loopback_description }}";
            family inet {
                address {{ interface.ipv4}}/{{ interface.ipv4_mask}};
            }
        }
    }
{% endfor %}
}
